{
	"name": "my-app",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev --mode dev",
		"dev:prod": "vite dev --mode prod  --host",
		"dev:localhost": "vite dev --mode localhost",
		"dev:backend": "MODE=localhost firebase emulators:start --import=./localhost-data --export-on-exit",
		"build": "vite build --mode prod",
		"deploy:dev": "vite build --mode dev && MODE=prod firebase use aragalaya-online && curl -H \"Content-Type: application/json\" -d '{\"username\": \"aragalaya.online:dev-bot\", \"content\": \"Deploying dev: dev might be down for about 5 minutes.\"}' \"https://discord.com/api/webhooks/1008257436714537000/NKPny6Z84ytuOJerOBdusdpHm-Mc4tWzCqiJhlwS_XQ1inDNKemWI2jC4-W31K3bu1rK\" && firebase deploy",
		"deploy:prod": "vite build --mode prod && MODE=prod firebase use aragalaya-online-prod && curl -H \"Content-Type: application/json\" -d '{\"username\": \"aragalaya.online:prod-bot\", \"content\": \"Deploying production: production might be down for about 5 minutes.\"}' \"https://discord.com/api/webhooks/1008257436714537000/NKPny6Z84ytuOJerOBdusdpHm-Mc4tWzCqiJhlwS_XQ1inDNKemWI2jC4-W31K3bu1rK\" && MODE=prod firebase deploy",
		"setup:emulators": "firebase init emulators",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "eslint ."
	},
	"devDependencies": {
		"@playwright/test": "^1.22.2",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/cookie": "^0.5.1",
		"eslint": "^8.16.0",
		"firebase": "^9.8.4",
		"firebase-admin": "^11.0.0",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/fira-mono": "^4.5.0",
		"@tiptap/core": "^2.0.0-beta.182",
		"@tiptap/extension-bold": "^2.6.6",
		"@tiptap/extension-bullet-list": "^2.6.6",
		"@tiptap/extension-document": "^2.6.6",
		"@tiptap/extension-dropcursor": "^2.6.6",
		"@tiptap/extension-hard-break": "^2.0.0-beta.33",
		"@tiptap/extension-heading": "^2.6.6",
		"@tiptap/extension-image": "^2.0.0-beta.30",
		"@tiptap/extension-italic": "^2.6.6",
		"@tiptap/extension-link": "^2.0.0-beta.43",
		"@tiptap/extension-list-item": "^2.6.6",
		"@tiptap/extension-ordered-list": "^2.6.6",
		"@tiptap/extension-paragraph": "^2.6.6",
		"@tiptap/extension-placeholder": "^2.0.0-beta.53",
		"@tiptap/extension-strike": "^2.6.6",
		"@tiptap/extension-text": "^2.6.6",
		"@tiptap/starter-kit": "^2.0.0-beta.191",
		"@types/chroma-js": "^2.1.3",
		"chroma-js": "^2.4.2",
		"cookie": "^0.4.1",
		"rxjs": "^7.5.5",
		"string-strip-html": "^11.0.0",
		"uuid": "^8.3.2"
	}
}